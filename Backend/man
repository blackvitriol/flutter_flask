# testing backends
import requests

# Send post rquest with image to server
url = 'http://127.0.0.1:5000/im_size'
load_image = open('flask/data/test1.jpg', 'rb')
my_img = {'image': load_image}
r = requests.post(url, files=my_img)

# convert server response into JSON format.
print(r.json())

